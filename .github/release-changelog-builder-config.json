{
  "pr_template": "- ${{TITLE}} (#[${{NUMBER}}])",
  "categories": [
    { "title": "### Added",         "labels": ["Added", "enhancement"] },
    { "title": "### Changed",       "labels": ["Changed", "dependencies"] },
    { "title": "### Fixed",         "labels": ["Fixed", "bug"] },
    { "title": "### Documentation", "labels": ["Documentation", "documentation"] },
    { "title": "### Security",      "labels": ["Security"] },
    { "title": "### Breaking",      "labels": ["Breaking", "breaking-change"] }
  ],
  "ignore_labels": [
    "duplicate", "invalid", "wontfix",
    "question", "good first issue", "help wanted",
    "javascript", "skip-changelog"
  ],
  "sort": "mergedAt",
  "ascending": false,
  "template": "## Recent Merged Pull Requests\n\n${{CHANGELOG}}\n"
}
